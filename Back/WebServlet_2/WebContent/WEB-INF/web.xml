<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>WebServlet_2</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>path</servlet-name>
  	<servlet-class>com.PathServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>path</servlet-name>
  	<url-pattern>/java/study/*</url-pattern>
  	<!-- 
  	경로에 대한 매핑도 가능하다.
  	http://192.168.0.30:8090/WebServlet_2/java/study/board.jsp
  	>> com.PathServlet 실행
  	
  	http://192.168.0.30:8090/WebServlet_2/java/study/a.jsp
  	http://192.168.0.30:8090/WebServlet_2/java/study/b.jsp
  	http://localhost:8005/WebServlet_2/java/study/hong.html
  	http://localhost:8005/WebServlet_2/java/study/aaaaa
	
	<url-pattern>*.do</url-pattern>
	
  	/simple ~~ /action.do ~~
  			
  	  -->
  </servlet-mapping>
</web-app>